<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rgbcontroller.MainActivity">


    <Button
        android:id="@+id/enableDisableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btEnable"
        android:text="Enable BT" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/enableDisableButton"
        android:layout_toRightOf="@+id/enableDisableButton"
        android:onClick="btList"
        android:text="LIST" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="exit"
        android:text="Exit" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listButton"
        android:layout_alignBottom="@+id/listButton"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/listButton"
        android:layout_toRightOf="@+id/listButton"
        android:text="Disconnected"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:text="\u2022"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/redBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enableDisableButton"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/redBar"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/enableDisableButton"
            android:max="255"
            android:min="0"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:progressTint="@android:color/holo_red_light"
            android:thumbTint="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/redBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/greenBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redBarLayout"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/greenBar"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/redBar"
            android:max="255"
            android:min="0"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:progressTint="@android:color/holo_green_light"
            android:thumbTint="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/greenBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/blueBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenBarLayout"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/blueBar"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/greenBar"
            android:max="255"
            android:min="0"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:progressTint="@android:color/holo_blue_light"
            android:thumbTint="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/blueBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greenBar"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/dot"
            android:layout_toStartOf="@+id/dot"
            android:text="0"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/color_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blueBarLayout"
        android:text="\u2022"
        android:textSize="100sp" />

</RelativeLayout>
